{% extends 'layout.twig' %}

{% block content %}
	<h2>Login</h2>
	{% if errors %} <!-- Twig vefica si es un arreglo que no este vacÃ­o-->
		{% include('partials/errors.twig') %}
	{% endif %}
	<form method="post">
		<div class="form-group">
			<label for="inputEmail">Email</label>
			<input type="text" class="form-control" name="email" id="inputEmail">
